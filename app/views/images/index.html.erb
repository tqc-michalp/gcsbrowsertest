<div class="flex flex-col ">
  <div class="flex justify-center">
    <%== pagy_nav(@pagy) %>
  </div>
  <div class="flex flex-row flex-wrap justify-left gap-6">
    <% @images.each do |image| %>
      <div class="bg-indigo-300">
        <%= link_to image_path(image.name_url_safe_encoded) do %>
          <%= image_tag image.signed_url, class: "h-48 w-48" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
